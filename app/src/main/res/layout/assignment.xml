<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teachermain.AssignmentActivity">

    <EditText
        android:id="@+id/assignment_description"
        android:layout_width="357dp"
        android:layout_height="49dp"
        android:hint="add describtion here..."
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="62dp"
        android:gravity="center_horizontal"
        android:text="New assignment"
        android:textColor="#1A4876"
        android:textStyle="bold"
        android:background="#00CC6A"
        android:textSize="40sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/save_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/done"
        android:textStyle="bold"
        android:background="@drawable/boarder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_stationary"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="104dp"
        android:layout_height="53dp"

        android:background="@drawable/boarder2"
        android:gravity="left"
        android:text="Title:"
        android:textColor="#1A4876"
        android:textSize="30sp"
        android:textStyle="bold|italic"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="373dp"
        android:layout_height="58dp"
        android:layout_marginTop="35dp"

        android:background="@drawable/boarder2"
        android:gravity="center_horizontal"
        android:text="@string/assignment_description"
        android:textColor="#1A4876"
        android:textSize="30sp"
        android:textStyle="bold|italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignment_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/assignment_name"
        android:layout_width="261dp"
        android:layout_height="39dp"
        android:hint="enter name..."
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

    <CheckBox
        android:id="@+id/checkBox_stationary"
        android:layout_width="367dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Stationary Assignment"
        android:background="#ccff"
        android:textColor="#006666"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignment_description" />


</androidx.constraintlayout.widget.ConstraintLayout>