        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".teachermain.ViewStudentStats"
            android:label="@string/title_activity_view_student_stats"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".teachermain.nonStationarySubmission"
            android:label="@string/title_activity_non_stationary_submission"
