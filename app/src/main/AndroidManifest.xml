            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gps.GPSActivity"
            android:label="@string/gps_activity" />

        <service android:name=".gps.GPSService" />

        <activity
            android:name=".video.VideoSubmission"
            android:label="submit_video" />
        <activity
            android:name=".video.PlayVideoActivity"
            android:label="play video" />
        <activity
            android:name=".teachermain.createCourse"
            android:label="createCourse" />
        <activity
            android:name=".teachermain.AssignmentActivity"
            android:label="Assignment" />
        <activity android:name=".studentmain.Enroll" />

        <meta-data android:name="com.google.android.gms.version" />

        <activity
            android:name=".login.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

